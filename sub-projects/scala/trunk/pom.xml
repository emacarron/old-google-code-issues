<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.mybatis</groupId>
    <artifactId>mybatis-parent</artifactId>
    <version>12</version>
  </parent>
  <groupId>org.mybatis.scala</groupId>
  <artifactId>mybatis-scala-parent</artifactId>
  <version>1.0-RC2-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>MyBatis Scala</name>
  <url>http://www.mybatis.org/scala/1.0</url>

  <modules>
    <module>mybatis-scala-core</module>
    <module>mybatis-scala-samples</module>
  </modules>

  <repositories>
    <repository>
      <id>scala-tools.org</id>
      <name>Scala-tools Maven2 Repository</name>
      <url>http://scala-tools.org/repo-releases</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>scala-tools.org</id>
      <name>Scala-tools Maven2 Repository</name>
      <url>http://scala-tools.org/repo-releases</url>
    </pluginRepository>
  </pluginRepositories>

  <scm>
    <url>scm:svn:https://mybatis.googlecode.com/svn/sub-projects/scala/trunk</url>
    <connection>scm:svn:https://mybatis.googlecode.com/svn/sub-projects/scala/trunk</connection>
    <developerConnection>scm:svn:https://mybatis.googlecode.com/svn/sub-projects/scala/trunk</developerConnection>
  </scm>

  <distributionManagement>
    <site>
      <id>mybatis.site</id>
      <url>ftp://${mybatis.host}/scala/${project.version}</url>
    </site>
  </distributionManagement>

  <properties>
    <findbugs.onlyAnalyze>org.mybatis.scala.*</findbugs.onlyAnalyze>
    <javac.src.version>1.6</javac.src.version>
    <javac.target.version>1.6</javac.target.version>
  </properties>

  <build>
    <plugins>
      <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-release-plugin</artifactId>
      <configuration>
        <arguments>-Prelease</arguments>
      </configuration>
      </plugin>
    </plugins>

    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.scala-tools</groupId>
          <artifactId>maven-scala-plugin</artifactId>
          <version>2.9.1</version>
          <executions>
            <execution>
              <id>compile</id>
              <goals>
                <goal>compile</goal>
              </goals>
              <phase>compile</phase>
            </execution>
            <execution>
              <id>test-compile</id>
              <goals>
                <goal>testCompile</goal>
              </goals>
              <phase>test-compile</phase>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
